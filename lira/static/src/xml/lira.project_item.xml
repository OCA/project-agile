<templates xml:space="preserve">
    <t t-name="lira.list.project_item">
        <li class="collection-item project-list-item">
            <div class="project-item-left">
                <div class="project-image-wrapper">
                    <a class="project-key"><img t-attf-src="{{widget.image_url()}}" alt="" class="circle" /></a>
                </div>
                <a class="project-key"><t t-esc="widget.record.key"/></a> <t t-esc="widget.record.name"/>
            </div>
            <div class="project-item-right">
                <div class="estimates">
                    <span class="estimate blue darken-4"><t t-esc="widget.record.todo_estimation"/></span>
                    <span class="estimate amber darken-3"><t t-esc="widget.record.in_progress_estimation"/></span>
                    <span class="estimate green darken-3"><t t-esc="widget.record.done_estimation"/></span>
                </div>
            </div>
        </li>
    </t>
</templates>
