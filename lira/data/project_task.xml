<odoo>
    <data noupdate="1">
        <!-- List of common priorities -->
        <record id="project_agile.project_task_priority_blocker" model="project.task.priority">
            <field name="lira_icon">block-helper</field>
            <field name="lira_icon_color">#b71c1c</field>
        </record>

        <record id="project_agile.project_task_priority_critical" model="project.task.priority">
            <field name="lira_icon">arrow-up-bold</field>
            <field name="lira_icon_color">#b71c1c</field>
        </record>

        <record id="project_agile.project_task_priority_major" model="project.task.priority">
            <field name="lira_icon">chevron-double-up</field>
            <field name="lira_icon_color">#b71c1c</field>
        </record>

        <record id="project_agile.project_task_priority_minor" model="project.task.priority">
            <field name="lira_icon">chevron-double-down</field>
            <field name="lira_icon_color">#2e7d32</field>
        </record>

        <record id="project_agile.project_task_priority_trivial" model="project.task.priority">
            <field name="lira_icon">arrow-down-bold</field>
            <field name="lira_icon_color">#A9A9A9</field>
        </record>

        <!-- List of MoSCoW priorities -->
        <record id="project_agile.project_task_moscow_priority_must_have" model="project.task.priority">
            <field name="lira_icon">custom-moscow-must</field>
            <field name="lira_icon_color">#b71c1c</field>
        </record>

        <record id="project_agile.project_task_moscow_priority_should_have" model="project.task.priority">
            <field name="lira_icon">custom-moscow-should</field>
            <field name="lira_icon_color">#e65100</field>
        </record>

        <record id="project_agile.project_task_moscow_priority_could_have" model="project.task.priority">
            <field name="lira_icon">custom-moscow-could</field>
            <field name="lira_icon_color">#ffab00</field>
        </record>

        <record id="project_agile.project_task_moscow_priority_wont_have" model="project.task.priority">
            <field name="lira_icon">custom-moscow-would</field>
            <field name="lira_icon_color">#689f38</field>
        </record>


        <!-- Project Task Type 2 (a.k.a. Type) -->
         <record id="project_agile.project_task_type_subtask" model="project.task.type2">
            <field name="lira_icon">checkbox-multiple-marked-circle-outline</field>
            <field name="lira_icon_color">#039be5</field>
        </record>

        <record id="project_agile.project_task_type_task" model="project.task.type2">
            <field name="lira_icon">checkbox-marked-circle</field>
            <field name="lira_icon_color">#039be5</field>
        </record>

        <record id="project_agile.project_task_type_new_feature" model="project.task.type2">
            <field name="lira_icon">bookmark-plus</field>
            <field name="lira_icon_color">#2e7d32</field>
        </record>

        <record id="project_agile.project_task_type_improvement" model="project.task.type2">
            <field name="lira_icon">arrow-up-bold-circle</field>
            <field name="lira_icon_color">#2e7d32</field>
        </record>

        <record id="project_agile.project_task_type_bug" model="project.task.type2">
            <field name="lira_icon">bug</field>
            <field name="lira_icon_color">#d50000</field>
        </record>

        <record id="project_agile.project_task_type_story_item" model="project.task.type2">
             <field name="lira_icon">checkbox-marked-circle</field>
             <field name="lira_icon_color">#1dad1d</field>
        </record>

        <record id="project_agile.project_task_type_story" model="project.task.type2">
            <field name="lira_icon">bookmark</field>
            <field name="lira_icon_color">#2e7d32</field>
        </record>

        <record id="project_agile.project_task_type_spike" model="project.task.type2">
            <field name="lira_icon">pin</field>
            <field name="lira_icon_color">#2e7d32</field>
        </record>

        <record id="project_agile.project_task_type_epic" model="project.task.type2">
            <field name="lira_icon">bookmark</field>
            <field name="lira_icon_color">#944ce4</field>
        </record>

        <record id="project_agile.project_task_type_change" model="project.task.type2">
            <field name="lira_icon"></field>
            <field name="lira_icon_color"></field>
        </record>

        <record id="project_agile.project_task_type_access" model="project.task.type2">
            <field name="lira_icon"></field>
            <field name="lira_icon_color"></field>
        </record>

        <record id="project_agile.project_task_type_fault" model="project.task.type2">
            <field name="lira_icon"></field>
            <field name="lira_icon_color"></field>
        </record>

        <record id="project_agile.project_task_type_purchase" model="project.task.type2">
            <field name="lira_icon"></field>
            <field name="lira_icon_color"></field>
        </record>

        <record id="project_agile.project_task_type_it_help" model="project.task.type2">
            <field name="lira_icon"></field>
            <field name="lira_icon_color"></field>
        </record>
    </data>
</odoo>
